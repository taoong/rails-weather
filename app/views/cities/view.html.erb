<% if @city %>
  <h1> <%= @city.name %>  </h1>
  <p> Key Landmark: <%= @city.landmark %>  </p>
  <p> Population: <%= @city.population %>  </p>
  <p> Temperature: <%= @city.temperature %>°F </p>
<% else %>
  <h1> All Cities </h1>
  <%= link_to "Create new city", { :controller => "cities", :action => "new"}, html: {class: "btn"} %>
  <br>  
  <%= link_to "Update existing city", { :controller => "cities", :action => "update"}, html: {class: "btn"} %>
  <hr>
  <% if @cities.size > 0 %>
    <% @cities.each do |name, city| %>
      <% if not city.nil? %>
        <div class="card">
          <h3> <%= name %>  </h3>
          <p> Key Landmark: <%= city.landmark %>  </p>
          <p> Population: <%= city.population %> </p>
          <p> Temperature: <%= city.temperature %>°F </p>
        </div>
      <% end %>
    <% end %>
  <% else %>
    <h3> There are currently no cities! </h3>
  <% end %>
<% end %>